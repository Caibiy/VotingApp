extends layout

block content
    header.hero-unit(id="banner")
        .container
            h1 New Polls
            p.lead 你可以设置一个投票选项
            a(href="/newpolls" class="btn btn-lg btn-success") 新建一个投票
            a(href="/mypolls" class="btn btn-lg btn-primary") 我的投票
    .container
            .col-lg-4
                    h2 New Poll
                        form(name="newpoll",action="")
                            .form-group
                                label(for="name") 投票的名字
                                input(id="name",name="poll",placeholder="你最喜欢的品牌?",class="form-control")
                            .form-group 
                                label 选项
                                    input(name="option1",placeholder="NIKE",class="form-control")
                                    input(name="option2" placeholder="QIAODAN",class="form-control")
                                    input(name="option3",placeholder="LiNing",class="form-control")
                            .form-buttons(width="350px")
                                button(type="submit",class="btn btn-default") 提交
